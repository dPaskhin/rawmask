{
  "compilerOptions": {
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "target": "ES5",
    "module": "ESNext",
    "rootDir": ".",
    "baseUrl": ".",
    "downlevelIteration": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "paths": {
      "rawmask": [
        "./packages/rawmask/src/main"
      ],
      "@rawmask/*": [
        "./packages/*/src/main"
      ]
    },
    "types": [
      "jest"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ]
}
